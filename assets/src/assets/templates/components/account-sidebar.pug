form.form.account-sidebar.js-sidebar-form#profile
    .account-info.bordered
        .account-avatar
            img(src=require('@images/user.jpg'))
        .account-row.row.info
            .row__item
                span.row__item-title Ранг
                span.row__item-value Expert "Playmaker"
            .row__item
                span.row__item-title Рейтинг
                span.row__item-value.green
                    +icon('star', 'icon--star', 15, 15)
                    | 14
            .row__item
                span.row__item-title Бонусный счёт
                span.row__item-value.blue
                    +icon('freebet', 'icon--freebet', 15, 15)
                    | 12 000
        h2.title.account-username Ilya_Kozak666ovskii2212_RUS
        .account-row.row
            .row__item
                span.row__item-title Отображаемое имя
                input(type="text" class="form__input" placeholder="Имя" value="Илья Казаков" required disabled)
                //span.row__item-value Илья Казаков
            .row__item
                span.row__item-title Почта
                input(type="email" class="form__input" placeholder="E-mail" value="mailbox@mail.ru" required disabled)
                //span.row__item-value mailbox@mail.ru
            .row__item
                span.row__item-title Телефон
                input(type="tel" class="form__input" placeholder="+7 XXX XXX XX XX" value="+7 984 902 46 07" required disabled)
                //span.row__item-value +7 984 902 46 07
        .account-statistics
            .account-statistics__output
                svg(width="100%" height="100%" viewBox="0 0 60 60")
                    circle(cx="30" cy="30" r="25" fill="none" stroke="#F9495B" stroke-width="9")
                    circle(class="percentage js-percentage" cx="30" cy="30" r="25" fill="none" stroke="#0CCD93" stroke-dasharray="95, 100" stroke-width="9" pathLength="100")
                .percentage-text.js-percentage-text 0%
            .account-statistics__total
                .account-statistics__total-title
                    span.color-midgrey Победы
                    span.color-midgrey.delimeter /
                    span.color-midgrey Поражения
                    span.color-midgrey.delimeter /
                    span.color-midgrey Прогнозы
                .account-statistics__total-value
                    span.color-mono.js-wins 2151
                    span.color-midgrey.delimeter /
                    span.color-mono.js-loses 135
                    span.color-midgrey.delimeter /
                    span.color-midgrey.js-total 2735

    .account-actions.bordered
        h2.title.account-actions__title Действия
        .account-actions__links
            a(href="#" class="account-actions__link link js-edit-account") Редактировать данные
            a(href="#" class="account-actions__link link") Выйти из профиля
        .account-actions__notice
            p Внимание! Ваш аккаунт не подтвержден. Для подтверждения аккаунта необходимо открыть письмо, отправленное на ваш E-mail