doctype html
html(lang="ru")
    block vars
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")

        link(rel="apple-touch-icon" sizes="180x180" href=require("@images/favicon/apple-touch-icon.png"))
        link(rel="icon" type="image/png" sizes="32x32" href=require("@images/favicon/favicon-32x32.png"))
        link(rel="icon" type="image/png" sizes="16x16" href=require("@images/favicon/favicon-16x16.png"))
        link(rel="manifest" href=require("@images/favicon/site.webmanifest"))
        meta(name="msapplication-TileColor" content="#da532c")
        meta(name="theme-color" content="#ffffff")

        title
            if headTitle
                | #{headTitle} -
            |
            |
            |Playmaker24
    body(class=pageClass)
        include header
        block content
        include ../components/popup/popup-login
        include ../components/popup/popup-forgot
        include ../components/popup/popup-thanx
        include ../components/popup/popup-password
        include footer